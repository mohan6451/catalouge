pipeline{
    //pre-build
    agent(node-1){
        label 'node1'
    }
    // if added env inside the stage then only that particular stage its accesable
    environment {
        learning = 'Jenkins'
    }
    options {
        timeout(time: 10, unit: 'SECONDS')
    }
    
    //build
    stages{
        stage{
            steps{
                script{
                    def packageJson = readJSON file: 'package.json'
                    def version = packageJson.version

                    echo "application version is ${version}"
                }
            }
        }
        stage('test'){
            steps{
                echo "Hello "
            }
        }
        
    }
    //post build
    post{
        always{
            cleanWs()
        }
        success{
            echo "pass"
        }
        failure{
            echo "fail"
        }
        aborted{
            echo "pipeline is aborted"
        }
    }

}
