pipeline{
    //pre-build
    agent(node-1){
        label 'node1'
    }
    // if added env inside the stage then only that particular stage its accesable
    environment {
        learning = 'Jenkins'
    }
    options {
        timeout(time: 10, unit: 'SECONDS')
    }
    
    //build
    stages{
        stage('build'){
            steps{
                script{
                    sh """
                    echo "building jenkins file 14/1/26"
                    echo $learning
                    echo $need
                    """
                }
            }
        }
        stage{
            steps{
                script{
                    def packageJson = readJSON file: 'package.json'
                    def version = packageJson.version

                    echo "application version is ${version}"
                }
            }
        }
        stage('test'){
            steps{
                echo "Hello "
            }
        }
        stage('deploy'){
 //            input {
 //             message "Should we continue?"
 //               ok "Yes, we should."
 //               submitter "alice,bob"
 //               parameters {
 //                   string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
 //             }
 //           }
            when {
                expression { "$params.DEPLOY" == "true"}
            }
            steps{
                echo "deploying"
            }
        }
    }
    //post build
    post{
        always{
            cleanWs()
        }
        success{
            echo "pass"
        }
        failure{
            echo "fail"
        }
        aborted{
            echo "pipeline is aborted"
        }
    }

}
